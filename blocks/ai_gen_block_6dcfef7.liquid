{% doc %}
  @prompt
    Testimonials are customer quotes or reviews that showcase positive experiences with your product or brand to build trust and credibility. most minimal testimonial block which i can edit later 
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-testimonial-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-testimonial-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    text-align: {{ block.settings.text_alignment }};
  }

  .ai-testimonial-quote-{{ ai_gen_id }} {
    font-size: {{ block.settings.quote_size }}px;
    line-height: 1.6;
    color: {{ block.settings.text_color }};
    margin: 0 0 20px;
  }

  .ai-testimonial-author-{{ ai_gen_id }} {
    font-size: {{ block.settings.author_size }}px;
    color: {{ block.settings.author_color }};
    font-weight: 600;
    margin: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-testimonial-{{ ai_gen_id }} {
      padding: 30px 15px;
    }

    .ai-testimonial-quote-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.quote_size }}px * 0.9);
    }

    .ai-testimonial-author-{{ ai_gen_id }} {
      font-size: calc({{ block.settings.author_size }}px * 0.9);
    }
  }
{% endstyle %}

<ai-testimonial-{{ ai_gen_id }} class="ai-testimonial-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonial-container-{{ ai_gen_id }}">
    {% if block.settings.quote != blank %}
      <blockquote class="ai-testimonial-quote-{{ ai_gen_id }}">
        {{ block.settings.quote }}
      </blockquote>
    {% endif %}

    {% if block.settings.author != blank %}
      <p class="ai-testimonial-author-{{ ai_gen_id }}">{{ block.settings.author }}</p>
    {% endif %}
  </div>
</ai-testimonial-{{ ai_gen_id }}>

{% schema %}
{
  "name": "Testimonial",
  "tag": null,
  "settings": [
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "richtext",
      "id": "quote",
      "label": "Quote",
      "default": "<p>This product exceeded my expectations. Highly recommend!</p>"
    },
    {
      "type": "text",
      "id": "author",
      "label": "Author name",
      "default": "Sarah Johnson"
    },
    {
      "type": "header",
      "content": "Style"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "center"
    },
    {
      "type": "range",
      "id": "max_width",
      "label": "Maximum width",
      "min": 400,
      "max": 1000,
      "step": 50,
      "unit": "px",
      "default": 700
    },
    {
      "type": "range",
      "id": "quote_size",
      "label": "Quote size",
      "min": 14,
      "max": 32,
      "step": 2,
      "unit": "px",
      "default": 18
    },
    {
      "type": "range",
      "id": "author_size",
      "label": "Author size",
      "min": 12,
      "max": 24,
      "step": 2,
      "unit": "px",
      "default": 14
    },
    {
      "type": "header",
      "content": "Colors"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background",
      "default": "#f3f3f3"
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Quote",
      "default": "#121212"
    },
    {
      "type": "color",
      "id": "author_color",
      "label": "Author",
      "default": "#121212"
    },
    {
      "type": "range",
      "id": "desktop_width_percent",
      "label": "Desktop width",
      "min": 50,
      "max": 100,
      "step": 5,
      "unit": "%",
      "default": 100
    }
  ],
  "presets": [
    {
      "name": "Testimonial"
    }
  ]
}
{% endschema %}
