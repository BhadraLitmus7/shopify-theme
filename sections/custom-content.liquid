<section class="custom-content">
  <div class="page-width">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}

    {% if section.settings.text != blank %}
      <p>{{ section.settings.text }}</p>
    {% endif %}

    {% for block in section.blocks %}
      {% case block.type %}

        {% when 'button' %}
          <a
            href="{{ block.settings.link }}"
            class="custom-button"
          >
            {{ block.settings.label }}
          </a>

        {% when 'image' %}
          {% if block.settings.image != blank %}
       <img
  src="{{ block.settings.image | image_url: width: 300 }}"
  alt="{{ block.settings.image.alt | escape }}"
  width="{{ block.settings.image.width }}"
  height="{{ block.settings.image.height }}"
  class="custom-section__image"
>

          {% endif %}

      {% endcase %}
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Custom Content",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Custom Section Heading"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "This is custom section text."
    }
  ],
  "blocks": [
    {
      "type": "button",
      "name": "Button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button label",
          "default": "Click me"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button link"
        }
      ]
    },
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Content"
    }
  ]
}
{% endschema %}
